<%= form_for @product do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :cost %>
<%= f.number_field(:cost, step: 0.1) %>
<%= f.label :country_of_origin %>
<%= f.text_field :country_of_origin %>
<%= f.collection_select(:product, @products, :id, :name)%>
<%= f.submit  %>
<% end %>
