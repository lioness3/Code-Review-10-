<%= @product.name %>
<h3>Write your review below</h3>
<%= form_for [@product, @review] do |f| %>
<%= f.label :author %>
<%= f.text_field :author%>
<%= f.label :rating %>
<%= f.number_field :rating, in: 1..5 %>
<%= f.label :content_body %>
<%= f.text_field :content_body%>

<%= f.submit  %>
<% end %>


<%= render "layouts/company_info" %>
